rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // Products can be read by anyone, but only written by authenticated admins
    match /products/{productId} {
      allow read: if true;
      allow write: if isSignedIn() && isAdmin();
    }

    // Users can create their own profile, and only they can read or write it.
    match /users/{userId} {
      allow read, update, delete: if isSignedIn() && request.auth.uid == userId;
      allow create: if isSignedIn() && request.auth.uid == userId;
    }

    // Admins collection can only be modified by other admins,
    // but the first admin can be created by any authenticated user.
    match /admins/{userId} {
      allow read: if isSignedIn() && isAdmin();
      allow write: if isSignedIn() && isAdmin();
      // Allow the very first admin to be created.
      allow create: if isSignedIn() && !exists(/databases/$(database)/documents/admins);
    }
  }
}
