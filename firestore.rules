rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // Products can be read by anyone, but only written by authenticated admins
    match /products/{productId} {
      allow read: if true;
      allow write: if isSignedIn() && isAdmin(); 
    }

    // Users can create their own profile, and only they can read or write it.
    match /users/{userId} {
      allow read, update, delete: if request.auth.uid == userId;
      allow create: if request.auth.uid == userId;
    }

    // Admins collection can only be read and written by other admins
    match /admins/{userId} {
      allow read, write: if isSignedIn() && isAdmin();
    }
  }
}
